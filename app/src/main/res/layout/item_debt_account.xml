<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/my_card"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/name"
            android:text="name"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/number"
            android:text="+966501501886"
            android:autoLink="phone"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/address"
            android:text="address"
            android:layout_gravity="right"
            android:background="@drawable/rounded_blue_layout"
            android:textColor="#fff"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/debt_price"
            android:text="2.5 ريال"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/price_red"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/show_invoices"
            android:textColor="@color/colorAccentDark"
            android:background="@drawable/golden_button"
            android:id="@+id/show_invoices"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>